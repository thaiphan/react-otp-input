  },
  "bugs": {
    "url": "https://github.com/devfolioco/react-otp-input/issues"
  },
  "module": "dist/react-otp-input.esm.js",
  "size-limit": [
    {
      "path": "dist/react-otp-input.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-otp-input.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {},
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
